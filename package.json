{
	"name": "nice-vscode-extension",
	"displayName": "nice_vscode_extension",
	"description": "my first vscode extension",
	"publisher": "wangyjhh",
	"version": "0.2.0",
	"icon": "resource/icon.png",
	"repository": {
		"url": "https://gitee.com/DVN/translation_vscode_extension.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "wyj.translationCommand",
				"title": "Translate"
			},
			{
				"command": "wyj.toUpperOrLowerCaseCommand",
				"title": "ToUpperOrLowerCase"
			},
			{
				"command": "wyj.theFirstLetterReverseCommand",
				"title": "TheFirstLetterReverse"
			},
			{
				"command": "wyj.jsonStringifyCommand",
				"title": "TheFirstLetterReverse"
			},
			{
				"command": "wyj.createTargetFileCommand",
				"title": "新建文件(wyj)"
			}
		],
		"keybindings": [
			{
				"command": "wyj.translationCommand",
				"key": "alt+w",
				"mac": "alt+w"
			},
			{
				"command": "wyj.toUpperOrLowerCaseCommand",
				"key": "alt+a",
				"mac": "alt+a"
			},
			{
				"command": "wyj.theFirstLetterReverseCommand",
				"key": "alt+q",
				"mac": "alt+q"
			},
			{
				"command": "wyj.jsonStringifyCommand",
				"key": "alt+j",
				"mac": "alt+j"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "wyj.createTargetFileCommand",
					"alt": "新建目标语言文件",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Nice Vscode Extension",
			"properties": {
				"nice_vscode_extension.扩展名": {
					"type": "string",
					"default": "ts",
					"enum": [
						"js",
						"ts",
						"vue"
					],
					"enumDescriptions": [
						"新增.js文件",
						"新增.ts文件",
						"新增.vue文件"
					]
				},
				"nice_vscode_extension.模式": {
					"type": "string",
					"description": "当此选项为自定义时，默认扩展名方案无效，请配置自定义扩展名",
					"default": "默认",
					"enum": [
						"默认",
						"自定义"
					],
					"enumDescriptions": [
						"使用扩展自带扩展名方案",
						"使用自定义扩展名"
					]
				},
				"nice_vscode_extension.自定义扩展名": {
					"type": "string",
					"default": ""
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "vitest --run"
	},
	"devDependencies": {
		"@types/babel__traverse": "^7.18.3",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3",
		"vitest": "^0.24.1"
	},
	"dependencies": {
		"@babel/parser": "^7.20.15",
		"@babel/traverse": "^7.20.13",
		"axios": "^1.2.2"
	}
}
